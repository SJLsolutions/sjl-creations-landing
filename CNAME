  <script>
    // ---- Data (placeholder gallery; swap with your own or wire an API)
    const PRODUCTS = [
      { id: "starwars-xwing-tie", title: "Universe Star Wars X-Wing & TIE Advanced X1 Starfighter â€“ Resin Lamp", collection: "Star Wars",
        url: "https://artfeza.com/collections/star-wars/products/universe-star-wars-x-wing-tie-advanced-x1-starfighter-epoxy-resin-lamp",
        image: "https://artfeza.com/cdn/shop/files/1_fc47de65-073b-483b-8977-fb332dc0e50d_1800x1800.jpg?v=1755236779" },
      { id: "best-ginzan-onsen", title: "Ginzan Onsen â€“ Book Nook", collection: "Best Selling",
        url: "https://artfeza.com/collections/best-selling",
        image: "https://artfeza.com/cdn/shop/products/il_1080xN.5460255334_7q8b_1800x1800.jpg?v=1725859981" },
      { id: "ghibli-howl", title: "Ghibli Howl's Moving Castle â€“ Resin Lamp", collection: "Ghibli Japanese",
        url: "https://artfeza.com/collections/ghibli-japanese",
        image: "https://artfeza.com/cdn/shop/files/Howl_1_1800x1800.jpg?v=1738760000" },
      { id: "pokemon-umbreon-espeon", title: "PokÃ©mon Umbreon & Espeon â€“ Resin Lamp", collection: "Best Selling",
        url: "https://artfeza.com/collections/best-selling",
        image: "https://artfeza.com/cdn/shop/files/EspeonUmbreon_1800x1800.jpg?v=1738761000" },
      { id: "naruto-uzumaki-six-paths", title: "Uzumaki Naruto â€“ Sage of Six Paths â€“ Resin Lamp", collection: "Naruto",
        url: "https://artfeza.com/collections/naruto",
        image: "https://artfeza.com/cdn/shop/files/naruto_six_paths_1800x1800.jpg?v=1738762000" },
      { id: "statue-ornstein", title: "Dark Souls â€“ Dragon Slayer Ornstein â€“ Statue Figure", collection: "Statue Figures",
        url: "https://artfeza.com/collections/statue-figures",
        image: "https://artfeza.com/cdn/shop/files/ornstein_statue_1800x1800.jpg?v=1738763000" },
    ];

    // ---- State / DOM
    let state = { q: "", collection: "All" };
    const grid = document.getElementById("grid");
    const searchInput = document.getElementById("searchInput");
    const collectionSelect = document.getElementById("collectionSelect");
    document.getElementById("year").textContent = new Date().getFullYear();

    // ---- Filters
    const collections = ["All", ...Array.from(new Set(PRODUCTS.map(p => p.collection || "Misc")))];
    collections.forEach(c => {
      const opt = document.createElement("option");
      opt.value = c; opt.textContent = c;
      collectionSelect.appendChild(opt);
    });

    searchInput.addEventListener("input", (e) => { state.q = e.target.value || ""; render(); });
    collectionSelect.addEventListener("change", (e) => { state.collection = e.target.value; render(); });

    // ---- Grid render
    function render() {
      const term = state.q.trim().toLowerCase();
      let items = PRODUCTS.slice();
      if (state.collection !== "All") items = items.filter(p => (p.collection || "Misc") === state.collection);
      if (term) items = items.filter(p => p.title.toLowerCase().includes(term));

      grid.innerHTML = "";
      items.forEach(p => {
        const card = document.createElement("article");
        card.className = "group relative overflow-hidden rounded-lg border border-slate-200 bg-white dark:border-white/10 dark:bg-white/5 glow";

        const imgWrap = document.createElement("div");
        imgWrap.className = "aspect-square w-full overflow-hidden bg-slate-200 dark:bg-slate-800";
        const img = document.createElement("img");
        img.alt = p.title;
        img.src = p.image || "";
        img.loading = "lazy";
        img.className = "img-fade";
        img.addEventListener("load", () => img.classList.add("loaded"));
        imgWrap.appendChild(img);

        const content = document.createElement("div");
        content.className = "space-y-3 p-4";

        const title = document.createElement("h3");
        title.className = "line-clamp-2 text-base font-semibold leading-tight text-slate-900 dark:text-white/90";
        title.textContent = p.title;

        const tag = document.createElement("div");
        tag.className = "text-sm text-slate-600 dark:text-white/60";
        tag.innerHTML = `Collection: <span class="text-brand dark:text-neon-cyan">${p.collection}</span>`;

        const row = document.createElement("div");
        row.className = "flex flex-col gap-2 sm:flex-row sm:gap-3";

        const btn1 = document.createElement("a");
        btn1.className = "inline-flex w-full items-center justify-center rounded-md bg-brand px-3 py-2 text-sm font-medium text-white hover:bg-brand-600 shadow-neon glow";
        btn1.href = p.url || "#";
        btn1.target = "_blank";
        btn1.rel = "noreferrer";
        btn1.textContent = "Learn More";

        const btn2 = document.createElement("a");
        btn2.className = "inline-flex w-full items-center justify-center rounded-md border border-slate-300 bg-white px-3 py-2 text-sm font-medium text-slate-900 hover:bg-slate-50 dark:border-white/15 dark:bg-white/5 dark:text-white dark:hover:bg-white/10";
        btn2.href = "#";
        btn2.textContent = "Share";
        btn2.addEventListener("click", (ev) => {
          ev.preventDefault();
          const shareText = `${p.title} â€” ${p.url || location.href}`;
          navigator.clipboard.writeText(shareText);
          btn2.textContent = "Copied!";
          setTimeout(() => (btn2.textContent = "Share"), 1200);
        });

        row.append(btn1, btn2);
        content.append(title, tag, row);
        card.append(imgWrap, content);
        grid.appendChild(card);
      });

      if (!items.length) {
        const empty = document.createElement("div");
        empty.className = "col-span-full py-16 text-center text-slate-600 dark:text-white/60";
        empty.textContent = "No items match your search.";
        grid.appendChild(empty);
      }
    }

    render();

    // ---- Theme toggle
    const themeToggle = document.getElementById('themeToggle');
    themeToggle.addEventListener('click', () => {
      const root = document.documentElement;
      const isDark = root.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      themeToggle.textContent = isDark ? 'ðŸŒž' : 'ðŸŒš';
    });
    (function syncIcon() {
      const isDark = document.documentElement.classList.contains('dark');
      document.getElementById('themeToggle').textContent = isDark ? 'ðŸŒž' : 'ðŸŒš';
    })();
  </script>
